<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_sea_buckthorn</item>
        <item name="colorPrimaryVariant">@color/color_kournikova</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_sea_buckthorn</item>
        <item name="colorSecondaryVariant">@color/color_kournikova</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="TextTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_16</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_20</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
